@model Muse.Models.Musing

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <link rel="stylesheet" href="~/css/UsersDelete.css" type="text/css" />
}

<h2>Are you sure you want to delete your musing?</h2>

<div>
    <i>@Html.DisplayFor(model => model.Title)</i> - @Html.DisplayFor(model => model.Date)
</div>
<div>
    <section>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <section>
                <a><input type="submit" value="Delete" id="delete" /></a>
            </section>
        </form>
    </section>
</div>
<div>
    <a class="option link" id="nodelete" asp-action="Index">No! Take me back home.</a>
</div>