@model Muse.Models.Musing

@{
    ViewData["Title"] = "Create";
}

@section Styles {
    <link rel="stylesheet" href="~/css/OnlyEntry.css" type="text/css" />
}

<div>
    <section>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>
                <label asp-for="Title" class="control-label"></label>:
            </p>
            <p>
                <input asp-for="Title" class="form-control" placeholder="Title, Subject or Prompt" id="prompt" value=""/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </p>
            <p>
                <label asp-for="Entry" class="control-label"></label>:
            </p>
            <p>
                <textarea asp-for="Entry" class="form-control" type="text"></textarea>
                <span asp-validation-for="Entry" class="text-danger"></span>
            </p>
            <p>
                <label asp-for="SUDS" class="control-label"></label>:
            </p>
            <p>
                <select asp-for="SUDS" class="form-control">
                    <option value="">--Subjective Units of Distress--</option>
                    <option value=0>0</option>
                    <option value=1>1</option>
                    <option value=2>2</option>
                    <option value=3>3</option>
                    <option value=4>4</option>
                    <option value=5>5</option>
                    <option value=6>6</option>
                    <option value=7>7</option>
                    <option value=8>8</option>
                    <option value=9>9</option>
                    <option value=10>10</option>
                </select>
                <span asp-validation-for="SUDS" class="text-danger"></span>
            </p>
            <a href="https://www.havening.org/media/articles/04c490_42c325da785c49e5ba972866d7058c8a.pdf"><img src="~/images/suds.jpg" alt="Click for More Information"></a>
            <p>
                <label asp-for="Aspirations" class="control-label"></label>:
            </p>
            <p>
                <input asp-for="Aspirations" class="form-control" placeholder="My aspirations are ..." />
                <span asp-validation-for="Aspirations" class="text-danger"></span>
            </p>
            <input type="submit" value="Submit Entry" id="entry" />
        </form>
    </section>
</div>

<div>
    <a class="link" asp-action="Index">Back to Timeline</a>
</div>

